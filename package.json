{
  "name": "simple-nodejs-typescript-starter",
  "version": "0.1.2",
  "description": "simple",
  "repository": {
    "type": "git",
    "url": "https://github.com/Deanly/simple-starter-nodejs-typescript"
  },
  "author": "deanly88@gmail.com",
  "license": "MIT",
  "scripts": {
    "start": "npm run build && npm run serve",
    "build": "npm run build-ts && npm run tslint",
    "serve": "node dist/index.js",
    "watch-node": "nodemon dist/index.js",
    "test": "jest --forceExit --coverage --verbose",
    "watch-test": "npm run test -- --watchAll",
    "build-ts": "tsc",
    "watch-ts": "tsc -w",
    "tslint": "tslint -c tslint.json -p tsconfig.json",
    "debug": "npm run build && npm run serve-debug",
    "serve-debug": "nodemon --inspect dist/index.js --debug"
  },
  "dependencies": {
    "async": "^3.1.0",
    "bluebird": "^3.5.5",
    "body-parser": "^1.19.0",
    "compression": "^1.7.4",
    "connect-mongo": "^3.0.0",
    "cookie-parser": "^1.4.4",
    "dotenv": "^8.1.0",
    "errorhandler": "^1.5.1",
    "express": "^4.17.1",
    "express-session": "^1.16.2",
    "express-validator": "^6.1.1",
    "lusca": "^1.6.1",
    "request": "^2.88.0",
    "request-promise": "^4.2.4",
    "socket.io": "^2.2.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/async": "^3.0.1",
    "@types/bluebird": "^3.5.27",
    "@types/body-parser": "^1.17.1",
    "@types/compression": "^1.0.1",
    "@types/connect-mongo": "^0.0.43",
    "@types/cookie-parser": "^1.4.2",
    "@types/dotenv": "^6.1.1",
    "@types/errorhandler": "^0.0.32",
    "@types/express": "^4.17.1",
    "@types/express-session": "^1.15.14",
    "@types/jest": "^24.0.18",
    "@types/lusca": "^1.6.1",
    "@types/morgan": "^1.7.37",
    "@types/node": "^12.7.2",
    "@types/request": "^2.48.2",
    "@types/shelljs": "^0.8.5",
    "@types/socket.io": "^2.1.2",
    "@types/supertest": "^2.0.8",
    "chai": "^4.2.0",
    "concurrently": "^4.1.2",
    "jest": "^24.9.0",
    "node-sass": "^4.12.0",
    "nodemon": "^1.19.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2"
  }
